//Step 1 Initialize the project
mkdir todo-app
cd todo-app
npm init -y

//Step 2 Install Dependencies
npm install express mongoose ejs body-parser axios

//Step 3 Create the project Structure
mkdir src
cd src
mkdir models routes views
touch app.js models/project.js models/todo.js routes/projectRoutes.js routes/todoRoutes.js views/index.ejs views/project.ejs views/todo.ejs

